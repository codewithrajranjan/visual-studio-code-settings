{
	"vim.disableAnnoyingNeovimMessage": true,
	"window.zoomLevel": 1,
	"window.menuBarVisibility": "toggle",
	"editor.minimap.enabled": false,
	"workbench.colorTheme": "Solarized Light",
	// shoe tabs in zen mode
	"zenMode.hideTabs" : false,
	"workbench.editor.enablePreview": false, // this will open files in new tab on hitting enter
	// hiding files from the explorer bar
	"files.exclude": {
		"**/*.js": true,
		"**/*.js.map": true,
		"**/*.spec.ts": true
	}
}
